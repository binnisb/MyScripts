# Load aliases and make prompt
if [ -f $HOME/.bash_aliases ]; then
    . $HOME/.bash_aliases
    make-prompt
fi
# Add .local/bin in home.
if [ -d $HOME/.local/bin ]; then
    PATH=$HOME/.local/bin:$PATH
fi

# Add bin in home.
if [ -d $HOME/bin ]; then
    PATH=$HOME/bin:$PATH
fi
if [ -d $HOME/Programming/MyScripts/bin ]; then
    PATH=$HOME/Programming/MyScripts/bin:$PATH
fi

# Allow programs to execute on ATI card:
xrandr --setprovideroffloadsink 0x55 0x7f

# Editor
export EDITOR=vim

# Load opam config
eval `opam config env`
