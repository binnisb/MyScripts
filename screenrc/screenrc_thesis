sessionname pfitmap
setenv ROOT $PWD
altscreen on
term screen-256color
backtick 1 5 5 true
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus string "pfitmap (%n: %t)"
caption string "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"
caption always

screen -t abstract
screen -t introduction
screen -t methods
screen -t results
screen -t appendix

select 0
