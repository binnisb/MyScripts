sessionname pfitmap
setenv ROOT $PWD
altscreen on
term screen-256color
backtick 1 5 5 true
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus string "pfitmap (%n: %t)"
caption string "%{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always

screen -t pfitmap
screen -t server
screen -t autotest
chdir db
screen -t psql 
chdir ..
chdir spec
screen -t spec
chdir ..
chdir app
chdir models
screen -t models
chdir ../controllers
screen -t controllers
chdir ../views
screen -t views
chdir $ROOT
chdir config
screen -t config
chdir $ROOT/app/assets/stylesheets
screen -t stylesheets
chdir $ROOT/log
screen -t log
chdir $ROOT/db/migrate
screen -t migrate
chdir $ROOT/data
screen -t data
chdir $ROOT
screen -t man
screen -t console
screen -t root
